<%- include ('partials/header.ejs'); %>

<body>
    <%- include ('partials/navbar.ejs'); %>
    <div class="container">
        <br>
        <h1><%= pergunta.ds_titulo %></h1>
        <%= pergunta.ds_descricao %>
        <hr>
        <div class="card" id="form-resposta-pergunta">
            <div class="card-header">
                <h3>Envie sua resposta:</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/responder">
                    <textarea class="form-control" name="corpo" cols="30" rows="6"
                        placeholder="Digite sua resposta."></textarea><br>
                    <input type="hidden" name="perguntaFk" value="<%= pergunta.id %>">
                    <button type="submit" class="btn btn-success">Enviar</button>
                </form>
            </div>
        </div>
        <br>
        <h3>Algumas respostas:</h3>
        <% if (respostas.length > 0) {%>
            <% respostas.forEach(resposta => { %>
                <br>
                <div class="card">
                    <div class="card-body">
                        Resposta: <%= resposta.ds_corpo %>
                    </div>
                </div>
            <% }) %>
        <% } else {%>
            <br>
                <div class="card">
                    <div class="card-body">
                        Nenhuma resposta foi encontrada.
                    </div>
                </div>
        <% }%>
        <br>
    </div>
</body>

<%- include ('partials/footer.ejs'); %>